{
  "name": "rollup-itcss",
  "version": "1.0.0",
  "description": "rollup.js & itcss - front-end recipe",
  "main": "index.js",
  "scripts": {
    "auth": "npx vsts-npm-auth -c .npmrc -t .npmrc",
    "clean": "npx rimraf build/**/*",
    "dev": "run-p serve watch",
    "serve": "npx http-server",
    "start": "npm run serve",
    "test": "jest",
    "prebuild": "run-p clean lint test",
    "build": "cross-env NODE_ENV=production run-p build:*",
    "build:scripts": "rollup --config",
    "build:styles": "postcss source/styles/*.css --verbose --dir build/css",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint source/scripts/**/*.{js,mjs} --fix",
    "lint:styles": "stylelint source/styles/**/*.css --fix",
    "watch": "run-p watch:*",
    "watch:scripts": "npm run build:scripts -- --watch",
    "watch:styles": "npm run build:styles -- --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.12.1",
    "eslint-config-vi": "^10.8.0",
    "jest": "26.6.3",
    "npm-run-all": "^4.1.5",
    "postcss": "8.2.10",
    "postcss-cli": "8.2.0",
    "postcss-csso": "^5.0.0",
    "postcss-extend": "^1.0.5",
    "postcss-hexrgba": "^2.0.1",
    "postcss-import": "^13.0.0",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.33.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-vi": "^2.0.1"
  }
}
